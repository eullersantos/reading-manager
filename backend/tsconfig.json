{
  "compilerOptions": {
    "target": "es5", 
    "lib": ["es6", "dom"],
    "types": ["reflect-metadata"],
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./src",                             
    "paths": {
      "@application/*": ["application/*"],
      "@domain/*": ["domain/*"],
      "@shared/*": ["shared/*"],
      "@errors/*": ["errors/*"],
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true        
  }
}
